<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#A52A2A"
        android:textColor="#FFFFFF"
        android:text="Gra w kosci. Autor : Stefan Urbaniak"
        android:textSize="23sp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:background="#D2691E"
        android:text="Rzuc kośćmi"
        android:layout_margin="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:gravity="center"
            android:text="?"
            android:textSize="96sp"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:gravity="center"
            android:text="?"
            android:textSize="96sp"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:gravity="center"
            android:text="?"
            android:textSize="96sp"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:gravity="center"
            android:text="?"
            android:textSize="96sp"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:gravity="center"
            android:text="?"
            android:textSize="96sp"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

    </LinearLayout>
    <TextView
        android:id="@+id/rollScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wynik tego losowania: 0"
        android:gravity="center"
        android:textSize="35sp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/gameScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wynik gry: 0"
        android:gravity="center"
        android:textSize="35sp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liczba rzutów: 0"
        android:gravity="center"
        android:textSize="35sp"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:background="#D2691E"
        android:text="Resetuj wynik"
        android:layout_margin="10dp"/>
</LinearLayout>